{
  "compilerOptions": {
    "outDir": "./es",
    "target": "es6",
    "lib": [
      "es7",
      "dom",
      "scripthost"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
