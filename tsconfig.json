{
    "compilerOptions": {
        "outDir": "./",
        "target": "es5",
        "lib": [
            "es7",
            "dom",
            "scripthost"
        ],
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": true,
        "removeComments": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "inlineSources": true,
        "inlineSourceMap": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}